#! /bin/bash
# /etc/init.d/garage-pi

OUT_LOG=/dev/null
GARAGE_PI_BINARY=/go/bin/garage-pi
MY_PORT=9999
WEBCAM_HOST=localhost
WEBCAM_PORT=8080

case "$1" in
  start)
    echo "Starting garage-pi"
    $GARAGE_PI_BINARY --port=$MY_PORT --webcamHost=$WEBCAM_HOST --webcamPort=$WEBCAM_PORT 1>$OUT_LOG 2>$OUT_LOG &
    ;;
  stop)
    echo "Stopping garage-pi"
    killall garage-pi
    ;;
  *)
    echo "Usage: /etc/init.d/garage-pi {start|stop}"
    exit 1
    ;;
  esac
exit 0
